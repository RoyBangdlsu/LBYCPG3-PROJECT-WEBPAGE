<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <nav class="main-nav">
    <div class="nav-left">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/goal-setting">Goal Setting</a>
      <a href="/view-progress">View Progress</a>
      <a href="/profile">Profile</a>
    </div>
  </nav>
  <div class="container">
    <h2>Welcome to Fitness Tracker</h2>
    <% if (locals.query && locals.query.login === 'success') { %>
      <script>
        alert('Login successful');
      </script>
    <% } %>

    <h2>Log Workout</h2>
    <form action="/log-workout" method="POST">
      <div class="form-group">
        <label for="exercise-select">Exercise:</label>
        <select id="exercise-select" name="exerciseId" required>
          <option value="">Select an exercise</option>
          <% locals.exercises.forEach(exercise => { %>
            <option value="<%= exercise._id %>"><%= exercise.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="hours">Hours:</label>
        <input type="number" id="hours" name="hours" placeholder="Enter hours spent" required>
      </div>
      <div class="form-group">
        <label for="sets">Number of Sets:</label>
        <input type="number" id="sets" name="sets" placeholder="Enter number of sets" required>
      </div>
      <div class="form-group">
        <label for="trials">Number of Trials per Set:</label>
        <input type="number" id="trials" name="trials" placeholder="Enter number of trials per set" required>
      </div>
      <button type="submit" class="btn">Log Workout</button>
    </form>

    <h2>Add New Exercise</h2>
    <form action="/add-exercise" method="POST">
      <div class="form-group">
        <label for="exercise-name">Exercise Name:</label>
        <input type="text" id="exercise-name" name="name" placeholder="Enter exercise name" required>
      </div>
      <div class="form-group">
        <label for="exercise-description">Description:</label>
        <textarea id="exercise-description" name="description" placeholder="Enter exercise description" required></textarea>
      </div>
      <div class="form-group">
        <label for="calories-burned">Calories Burned per Minute:</label>
        <input type="number" id="calories-burned" name="calories_burned_per_minute" step="0.01" placeholder="Enter calories burned per minute" required>
      </div>
      <div class="form-group">
        <label for="met">MET Value:</label>
        <input type="number" id="met" name="met" step="0.1" placeholder="Enter MET value" required>
      </div>
      <button type="submit" class="btn">Add Exercise</button>
    </form>
  </div>
  <%- include('partials/footer') %>
  <script src="/js/script.js"></script>
</body>
</html>
